.base {
  background: #ff6843;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.question {
  width: 80%;
  background: #fff;
  border-radius: 8px 8px 8px 8px;
  box-shadow: 0px 2px 6px #ff6e4a;
  margin-top: 15px;
  z-index: 999;
  flex-direction: column;
  padding-left: 15px;
  padding-right: 15px;
  margin-left: 15px;
  margin-right: 15px;
}

.question_number {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20px;
  align-items: baseline;
}

.question_current {
  color: #333;
  font-size: 32px;
}

.question_count {
  color: #666;
  font-size: 14px;
}

.quetion_title {
  margin-top: 30px;
  color: #333;
  font-size: 16px;
  line-height: 25px;
  margin-bottom: 20px;
}

.answer{
  margin-bottom: 15px;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.answer_status{
  width: 18px;
  height: 18px;
  margin-right: 12px;
}

.index_button {
  width: 80%;
  height: 70px;
  background: #fff;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
  box-shadow: 0 2px 3px #333;
  margin-left: 30px;
  margin-right: 30px;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  align-items: center;
}

.index_button_item{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
