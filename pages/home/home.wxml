<view style='background:#ff6843;height:{{winHeight}}px'>
  <view class="base">

    <block wx:for="{{data}}">
      <view class='item'>
        <view class='title'>
          <image class='image' src='课程名称.png'></image>
          <view>投资在卷散步</view>
        </view>

        <view class='content' hidden='{{show_whitch==0?true:false}}'>
          <text class='text'>暂未测试</text>
          <view class='test_at_once' bindtap="startExam">立即测试</view>
        </view>

        <view class='content' hidden='{{show_whitch==1?true:false}}'>
          <view class='row_style'>
            <view style='margin-right: 8px;margin-left:15px;font-size:36px;color: #333333;'>94</view>
            <view style='font-size:24px;color: #333333;'>分</view>
          </view>
          <view class='row_style '>
            <view style='margin-right: 5px;font-size:14px;color: #ff5d3e;'>查看已领到的优惠券</view>
            <image class='img_go' src='箭头.png'></image>
          </view>
        </view>
      </view>
    </block>
  </view>
  
  <view class='content_bottom'>
    <view class='text_bottom' bindtap="moreClass"> 查看更多的课程</view>
    <image style='width:13px;height:13px;' src='查看更多课程.png'></image>
  </view>
  <view bindtap='goShare'>测试分享</view>

</view>