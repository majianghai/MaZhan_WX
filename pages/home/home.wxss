/* pages/food/food.wxss */

.base {
  width: 100%;
  /* background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgba(0, 0, 0, 0)), to(rgba(12, 205, 137, 0.7))); */
  background-color: #ff6843;
  padding-top: 10rpx;
}

.item {
  height: 130px;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  background: #fff;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0rpx 6rpx 16rpx #ec927c;
}

.title {
  width: 100%;
  height: 30%;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  background: #fafafa;
  color: #666;
  size: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.course_name {
  display: block; /*内联对象需加*/
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis;
}

.content {
  width: 100%;
  height: 70%;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.text {
  font-size: 56rpx;
  color: #333;
  align-items: center;
  margin-left: 30rpx;
}

/* 立即测试按钮 */

.test_at_once {
  width: 140rpx;
  height: 48rpx;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgba(255, 110, 74, 1)), to(rgba(255, 85, 55, 1)));
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  box-shadow: 0rpx 4px 12rpx #ffa08c;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  color: #fff;
  font-size: 24rpx;
}

.row_style {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.img_go {
  width: 16rpx;
  height: 20rpx;
}
